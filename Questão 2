#include <stdio.h>

//Tutorial//
// Indique a quantidade de números a serem somados, depois serão pedidos os valores, //
// Que deverão ser todos informados na mesma linha separados por um espaço. //

int soma(int vetor[], int n)
{
    if( n == 1 )
    {
    return vetor[n-1];
    }
    return vetor[n-1] + soma(vetor, n-1);
}

int main()
 {
    int i;
    int valor;
    int vetor[valor];
    int Somar;
    
    printf ("Quantos números serão somados ?\n");
    scanf("%d", &valor);
    printf ("Insira os números:\n");

    for (i = 0; i < valor; i++)
    {
       scanf("%d", &vetor[i] );
    }
    
    Somar = soma(vetor, i);
    printf("\nResultado da soma = %d", Somar);
    
    return 0;
}
